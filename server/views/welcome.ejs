<head>
    <link rel="stylesheet" href="/styles.css"/>
</head>
<body>
<div id="page-wrapper">
<div id="welcomepage" class="default">
<h2 id="wm"> <span style=" font-size: 125%;">Welcome <%= locals.username %>,</span><br>&nbsp;
    <span style="font-size: 50%;">Bank:<span class="balance"> <%= locals.gold %></span> Gold <span class="balance"><%= locals.gems || 0 %></span> Gems</span>
</h2>

<aside id="select-filter">
        <form method="POST" name="filter" action="/filter/all">
            <input type="hidden" name="element-filter" value="All">
            <button type="submit" id="submit-all" class="submit-element">ALL</button>
        </form>
        <form method="POST" name="filter" action="/filter/Fire">
            <input type="hidden" name="element-filter" value="Fire">
            <button type="submit" id="submit-fire" class="submit-element">Fire</button>
        </form>
        <form method="POST" name="filter" action="/filter/Ice">
            <input type="hidden" name="element-filter" value="Ice">
            <button type="submit" id="submit-ice" class="submit-element">Ice</button>
        </form>
        <form method="POST" name="filter" action="/filter/Spirit">
            <input type="hidden" name="element-filter" value="Spirit">
            <button type="submit" id="submit-spirit" class="submit-element">Spirit</button>
        </form>
        <form method="POST" name="filter" action="/filter/Shadow">
            <input type="hidden" name="element-filter" value="Shadow">
            <button type="submit" id="submit-shadow" class="submit-element">Shadow</button>
        </form>
</aside>

<div id="shop">
    <div id="card-wrap">
   <% for (let i = 0; i < locals.data.length; i++) { %>
    <form name="addspell" method="POST" action="/addspell/<%= locals.data[i].name %>" onclick="alert('Spell Added to Cart!')">
        <input type="hidden" name="gold" value="<%= locals.data[i].cost %>">
<button id="spell-btn-1" class="spell-btn" type="submit" title="Add To Cart">
        <div class="card card-<%= locals.data[i].color%>" id="card-<%= locals.data[i].name %>">
            <section class="card-title"><%= locals.data[i].name %></section>
            <section class="card-icons" title="<%= locals.data[i].cost %> gold / <%= locals.data[i].gem_cost || 0 %> gem(s)"> <%= locals.data[i].cost %>&nbsp;<img src="/resources/logo-bitcoin.svg" class="card-logo"> <%= locals.data[i].gem_cost %> &nbsp;<img src="/resources/diamond-outline.svg" class="card-logo"></section>
            <section class="card-desc">+<%= locals.data[i].expr %>XP</section>
        </div>
        </button></form>
    <% } %>
    </div>
</div>
<div id="ab-wrap"><div id="access-bar">
    <button id="minigame"><a href="/minigame" class="homebtn">Play</a></button>
    <button id="profile"><a href="/profile" class="homebtn">Profile</a></button>
    <button id="cart"><a href="/cart" class="homebtn">Cart</a></button>
    <button id="logout"><a href="/logout" class="homebtn">Logout</a></button>
</div></div>

</div>
</div>
</body>